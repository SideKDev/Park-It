# Park-IT Backend Environment Variables
# Copy this file to .env and fill in your values

# Database
# For development (SQLite):
DATABASE_URL=sqlite:///./park_it.db
# For production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/park_it

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production

# Apple Sign In
APPLE_BUNDLE_ID=com.sidekickstudios.parkit

# Google OAuth (optional - for additional verification)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Push Notifications (optional)
# APNS_KEY_ID=your-apns-key-id
# APNS_TEAM_ID=your-team-id
# APNS_KEY_PATH=path/to/AuthKey.p8
# FCM_CREDENTIALS_PATH=path/to/firebase-credentials.json

# Environment
ENVIRONMENT=development
DEBUG=true
